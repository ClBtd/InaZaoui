{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Médias</h1>
        <a href="{{ path('admin_media_index') }}" class="btn btn-primary">Retour</a>
    </div>

    <!-- Affichage des erreurs de formulaire -->
    {% for field in ['title', 'user', 'album', 'file'] %}
        {% for error in attribute(form, field).vars.errors %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.title, {'attr': {'aria-label': 'Titre du média'}}) }}
        
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_row(form.user, {'attr': {'aria-label': 'Utilisateur associé'}}) }}
            {{ form_row(form.album, {'attr': {'aria-label': 'Album associé'}}) }}
        {% endif %}
        
        {{ form_row(form.file, {'attr': {'aria-label': 'Fichier du média'}}) }}
        
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
