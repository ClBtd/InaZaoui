{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Albums</h1>
        <a href="{{ path('admin_album_add') }}" class="btn btn-primary" aria-label="Ajouter un album">Ajouter</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.name }}</td>
                <td>
                    <a href="{{ path('admin_album_update', {id: album.id}) }}" class="btn btn-warning" aria-label="Modifier l'album {{ album.name }}">Modifier</a>
                    <a href="{{ path('admin_album_delete', {id: album.id}) }}" class="btn btn-danger" aria-label="Supprimer l'album {{ album.name }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
