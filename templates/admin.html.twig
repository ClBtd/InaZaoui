{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-none d-md-block bg-dark sidebar min-vh-100 p-4" role="navigation" aria-label="Menu de l'administration">
                <div class="position-sticky">
                    <h1 class="text-white" aria-hidden="true">Admin</h1>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_media_index') }}" aria-label="Accéder à la gestion des médias">
                                Medias
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_album_index') }}" aria-label="Accéder à la gestion des albums">
                                    Albums
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_invite_index') }}" aria-label="Accéder à la gestion des invités">
                                    Invités
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 p-4">
                {% block admin %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
